  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.3",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@preact/signals-core": "^1.12.1",
